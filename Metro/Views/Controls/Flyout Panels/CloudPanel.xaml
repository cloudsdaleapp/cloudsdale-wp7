<local:CloudsdaleFlyout
    x:Class="Cloudsdale_Metro.Views.Controls.Flyout_Panels.CloudPanel"
    DataContext="{Binding Path=DefaultViewModel, RelativeSource={RelativeSource Self}}"
    Loaded="CloudPanel_OnLoaded"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Cloudsdale_Metro.Views.Controls.Flyout_Panels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <StackPanel Margin="0,0,0,50">
        <!-- Avatar -->
        <Image Margin="0,16" Source="{Binding Path=Cloud.Avatar[256]}" Height="256" />
        
    </StackPanel>
</local:CloudsdaleFlyout>
