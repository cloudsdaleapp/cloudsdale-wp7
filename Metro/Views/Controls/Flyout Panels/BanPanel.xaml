<local:CloudsdaleFlyout
    x:Class="Cloudsdale_Metro.Views.Controls.Flyout_Panels.BanPanel"
    DataContext="{Binding Path=Ban, RelativeSource={RelativeSource Self}}"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Cloudsdale_Metro.Views.Controls.Flyout_Panels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    
    <StackPanel Margin="-10,0">
        <TextBlock FontSize="16" Margin="3">Date</TextBlock>
        <DatePicker Date="{Binding Path=Due}" Margin="0,0,-20,0" />
        <TextBlock FontSize="16" Margin="3">Time</TextBlock>
        <TimePicker Time="{Binding Path=Due}" />
    </StackPanel>
</local:CloudsdaleFlyout>
