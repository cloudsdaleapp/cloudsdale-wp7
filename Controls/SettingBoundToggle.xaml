<UserControl x:Class="Cloudsdale.Controls.SettingBoundToggle"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:toolkit="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone.Controls.Toolkit"
             Loaded="ControlLoaded">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <TextBlock Name="LabelBlock" FontSize="26" />
        <toolkit:ToggleSwitch Grid.Column="1" Name="Switch" Checked="Switch_OnChecked" Unchecked="Switch_OnUnchecked"
                              SwitchForeground="Transparent" Foreground="#FF3a3a3a" />
    </Grid>
</UserControl>