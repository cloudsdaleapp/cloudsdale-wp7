<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="CloudsdaleWin7.Views.Notifications.NotificationWindow"
        Title="NotificationWindow" WindowStyle="None" Background="#FF4C4C64" d:DesignWidth="350" MaxHeight="150" MaxWidth="350" AllowsTransparency="True" Height="104" ShowInTaskbar="False" Topmost="True">
    <Grid>
        <Button Content="X" Margin="0,10,10,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="21" Height="21" Background="{x:Null}" FontWeight="SemiBold">
            <Button.Foreground>
                <SolidColorBrush Color="{DynamicResource PrimaryBackground}"/>
            </Button.Foreground>
            <Button.BorderBrush>
                <SolidColorBrush Color="{DynamicResource PrimaryBackground}"/>
            </Button.BorderBrush>
        </Button>
        <Frame x:Name="NoteFrame" Content="Frame" Margin="10,35,10,10"/>
    </Grid>
</Window>
