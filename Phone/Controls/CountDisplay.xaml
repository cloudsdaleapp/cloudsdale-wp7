<UserControl x:Class="Cloudsdale.Controls.CountDisplay"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="35" d:DesignWidth="35">

    <Canvas Width="35" Height="35" x:Name="LayoutRoot">
        <Ellipse Height="35" Width="35" Fill="#FF505050">
        </Ellipse>
        <TextBlock Name="text" FontSize="24" Foreground="White" FontFamily="Comic Sans MS"/>
    </Canvas>
</UserControl>
